<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/Whitecolorbackground"
    android:layout_height="48dp">

    <TextView
        android:id="@+id/menu_body_primary"
        android:text="接收新消息通知"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/menu_divider"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"></View>

    <com.suke.widget.SwitchButton
        app:sb_uncheck_color="@color/primary_text_light"
        app:sb_checked_color="@color/colorAccent"
        app:sb_shadow_effect="false"
        app:sb_checked="true"
        app:sb_show_indicator="false"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>

</RelativeLayout>