<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/Shadowcolorbackgrounds"
    android:layout_height="150dp">

    <ImageView
        android:background="@drawable/card_order"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/order_type"
        android:text="地铁"
        android:textColor="@color/primary_black_text"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/order_status"
        android:text="已完成"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="26dp"
        android:layout_marginRight="48dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/menu_right_arrow"
        android:layout_marginTop="24dp"
        android:layout_marginRight="26dp"
        android:layout_alignParentRight="true"
        android:layout_width="22dp"
        android:layout_height="22dp" />

    <LinearLayout
        android:id="@+id/order_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_type"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="24dp">

        <ImageView
            android:src="@mipmap/icon_history"
            android:layout_width="14dp"
            android:layout_height="14dp" />

        <TextView
            android:id="@+id/order_date"
            android:text="03月24日"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_time"
            android:text="18:39"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_layout_one"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp">

        <com.self.ylog.subway.View.CircleImageView
            android:src="#44bea3"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/order_start"
            android:text="西安市.五路口-地铁站"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_layout_two"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp">

        <com.self.ylog.subway.View.CircleImageView
            android:src="#fc9153"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/order_end"
            android:text="西安市.西安北站-地铁站"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>