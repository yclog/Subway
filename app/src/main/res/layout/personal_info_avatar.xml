<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/Whitecolorbackground"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/menu_body_primary"
        android:text="头像"
        android:textSize="14sp"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/menu_right_arrow"
        android:src="@mipmap/menu_right_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <com.self.ylog.subway.View.CircleImageView
        android:id="@+id/personal_info_item_avatar"
        android:src="@mipmap/hugh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menu_right_arrow"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="24dp"/>

    <View
        android:id="@+id/menu_divider"
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"></View>

</RelativeLayout>