<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/Whitecolorbackground"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:background="@color/Whitecolorbackground"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/news_src"
            android:src="#000000"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:id="@+id/news_title_text"
            android:text="TestTitle"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@+id/news_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/news_date"
            android:text="04-20"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/news_src"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/news_time"
            android:text="10:00"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/news_date"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:id="@+id/news_thumb"
            android:src="@mipmap/news_style_listview_thumb"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/news_comment"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/news_thumb_text"
            android:text="10"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/news_comment"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/news_comment"
            android:src="@mipmap/news_style_listview_comment"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/news_comment_text"
            android:text="15"
            android:textColor="@color/secondary_text"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp" />
    </RelativeLayout>

</LinearLayout>