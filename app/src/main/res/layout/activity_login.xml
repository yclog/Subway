<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/Whitecolorbackground"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/soft_logo"
        android:src="@drawable/subway_logo"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/login_tele"
        android:textColor="@color/primary_text"
        android:hint="手机号"
        android:textColorHint="@color/hint_text"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:layout_below="@+id/soft_logo"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:src="@mipmap/login_icon_person"
        android:layout_below="@+id/soft_logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="90dp"/>

    <EditText
        android:id="@+id/login_pwd"
        android:textColor="@color/primary_text"
        android:inputType="numberPassword"
        android:hint="密码"
        android:textColorHint="@color/hint_text"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/edittext_shape"
        android:layout_below="@+id/login_tele"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:src="@mipmap/login_icon_pwd"
        android:layout_below="@+id/login_tele"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="90dp"/>

    <TextView
        android:id="@+id/login_forget"
        android:text="忘记密码?"
        android:textSize="16sp"
        android:textColor="#858585"
        android:layout_below="@+id/login_pwd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_btn"
        android:text="登录"
        android:textColor="@color/primary_white_text"
        android:textSize="18sp"
        android:background="@drawable/login_btn"
        android:layout_below="@+id/login_forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:layout_width="220dp"
        android:layout_height="42dp"/>

    <Button
        android:id="@+id/login_register"
        android:text="注册"
        android:textColor="@color/primary_text_light"
        android:textSize="18sp"
        android:background="@drawable/login_btn"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="220dp"
        android:layout_height="42dp" />

    <ImageView
        android:src="@drawable/login_background"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

</RelativeLayout>