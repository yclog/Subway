<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/Shadowcolorbackgrounds"
    android:layout_height="match_parent">

    <include layout="@layout/titlebar_personal_wallet_balance"></include>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="176dp">
        
        <ImageView
            android:background="@drawable/card_balance"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <TextView
            android:text="余额 (元)"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_help"
            android:text="常见问题"
            android:textColor="@color/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="29dp"
            android:layout_marginRight="32dp"/>
        
        <ImageView
            android:src="@mipmap/balance_icon_help"
            android:layout_toLeftOf="@+id/text_help"
            android:layout_marginTop="28dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textview_personal_wallet_balance"
            android:text="0.00"
            android:textColor="@color/primary_yellow"
            android:textSize="48sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_centerVertical="true" />

        <TextView
            android:text="支付车费时优先使用"
            android:textSize="12sp"
            android:textColor="@color/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>

    <TextView
        android:text="暂无流水"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>