<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/Whitecolorbackground"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/station_status"
            android:text="status"
            android:textSize="12sp"
            android:textColor="@color/primary_text_light"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/station_state"
            android:text="state"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:layout_toRightOf="@+id/station_status"
            android:layout_marginLeft="32dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/Shadowcolorbackgrounds"
            android:layout_marginLeft="56dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>

        <View
            android:background="@color/Shadowcolorbackgrounds"
            android:layout_marginLeft="60.2dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>

        <com.self.ylog.subway.View.CircleImageView
            android:id="@+id/line_dot"
            android:src="@color/primary_yellow"
            android:layout_marginLeft="54.5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/Shadowcolorbackgrounds"
            android:layout_centerVertical="true"
            android:layout_width="9dp"
            android:layout_height="9dp" />

        <View
            android:id="@+id/line_up"
            android:background="@color/primary_yellow"
            android:layout_marginLeft="57dp"
            android:layout_width="3.5dp"
            android:layout_height="24dp"></View>


        <View
            android:id="@+id/line_dowm"
            android:background="@color/primary_yellow"
            android:layout_marginLeft="57dp"
            android:layout_alignParentBottom="true"
            android:layout_width="3.5dp"
            android:layout_height="24dp"></View>

        <ImageView
            android:src="@mipmap/menu_right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

</LinearLayout>